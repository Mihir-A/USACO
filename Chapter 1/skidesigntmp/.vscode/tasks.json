{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ build active file debug",
            "command": "/usr/bin/clang++",
            "args": [
                "-std=c++20",
                "-fdiagnostics-color=always",
                "-g",
                "${fileDirname}/*.cpp",
                "-I${fileDirname}/../include",
                "-o",
                "${fileDirname}/../bin/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ build active file release",
            "command": "/usr/bin/clang++",
            "args": [
                "-std=c++20",
                "-O2",
                "${fileDirname}/*.cpp",
                "-I${fileDirname}/../include",
                "-o",
                "${fileDirname}/../bin/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "compiler: /usr/bin/clang++"
        }
    ],
    "version": "2.0.0"
}